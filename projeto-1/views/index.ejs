<%- include('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>

        <div class="container">
            <hr>
            <h1>Perguntas</h1>
            <hr>
            <a href="/pergunta" class="btn btn-primary">Perguntas</a>
            <hr>
            <% pergunta.forEach(pergunta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <h3> <%= pergunta.titulo %></h3>
                    </div>
                    <div class="card-footer">
                        <a href="/perguntar/<%= pergunta.id %>"><button class="btn btn-primary">Responder</button></a>
                    </div>
                </div>
            <% }) %>
        </div>
        
</body>
