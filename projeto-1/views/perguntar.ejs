<%- include('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>

        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %> </p>
            <hr>
            <form action="/responder" method="post">
                <h3>Resposta</h3>
                <label for="">Resposta:</label>
                <textarea class="form-control" placeholder="Digite sua resposta aqui" name="corpo" id="" cols="30" rows="10"></textarea><br>
                <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-primary">Responder</button>
            </form>

            <hr>
            <h3>Respostas</h3>
            <hr>
            <% respostas.forEach(resposta => { %> 
                <br>
                <div class="card">
                    <div class="body">
                        <p> <%= resposta.corpo %> </p>
                    </div>
                </div>    
            <% }) %>
            <br>
            <br>
        </div>
        
</body>
<%- include ('partials/footer.ejs'); %>